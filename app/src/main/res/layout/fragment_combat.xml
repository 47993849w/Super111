<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:showIn="@layout/activity_combat"
    tools:context="com.example.tomecabello.myapplication.CombatActivityFragment">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/Pokemon1"
        android:textSize="18dp"
        android:layout_alignTop="@+id/Pokemon2"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/Pokemon2"
        android:textSize="18dp"
        android:layout_below="@+id/imageView3"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PS: "
        android:id="@+id/PS1"
        android:layout_below="@+id/Pokemon1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="61dp"
        android:textSize="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PS: "
        android:id="@+id/PS2"
        android:layout_alignTop="@+id/PS1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TU TURNO"
        android:id="@+id/turno1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TU TURNO"
        android:id="@+id/turno2"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="24dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/Ataque1"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/PS1"
        android:drawableLeft="@drawable/tipo_fisico"

        android:layout_alignParentStart="true"
        android:background="#f3f2f2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Placaje"
        android:id="@+id/Ataque2"
        android:drawableLeft="@drawable/tipo_fisico"
        android:layout_alignTop="@+id/Ataque1"
        android:background="#f3f2f2"
        android:layout_alignEnd="@+id/PS2" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/imageView3"
        android:layout_below="@+id/turno2"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/imageView4"
        android:layout_below="@+id/turno1"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/Ataque3"
        android:background="#f3f2f2"
        android:drawableLeft="@drawable/tipo_especial"

        android:layout_alignTop="@+id/Ataque4"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Placaje"
        android:id="@+id/Ataque4"
        android:background="#f3f2f2"
        android:drawableLeft="@drawable/tipo_especial"
        android:layout_below="@+id/Ataque2"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="39dp" />
</RelativeLayout>
